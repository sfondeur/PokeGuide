<h3>Gallery</h3>

<p>Welcome to the Pokemon Gallery!</p>
<p>Find your pokemon in the list below or sort by generation number.</p>

<ul class="pagination">
    <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
    <li class="active"><a href="#!">Gen 1</a></li>
    <li class="waves-effect"><a href="#!">Gen 2</a></li>
    <li class="waves-effect"><a href="#!">Gen 3</a></li>
    <li class="waves-effect"><a href="#!">Gen 4</a></li>
    <li class="waves-effect"><a href="#!">Gen 5</a></li>
    <li class="waves-effect"><a href="#!">Gen 6</a></li>
    <li class="waves-effect"><a href="#!">Gen 7</a></li>
    <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
</ul>

<div class="row">
    <% @pokemons.each do |x| %>
    <div class="col s12 m2">
        <div class="card-panel hoverable">
            <div class="poke_id">
			    #<%= x.id %>
            </div>
		    <div class="poke_name">
			    <%= link_to x.name, x %>
		    </div>
		    <span>
			    <img src="<%= x.image %>">
		    </span>
        </div>
    </div>
    <% end %>
</div>